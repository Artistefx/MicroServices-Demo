pipeline {
    agent any
    tools {
        maven "maven-3.9.7"
    }
    stages {
        stage('Checkout Code') {
            steps {
                // Checkout the code from the repository
                checkout scm
            }
        }

        stage('Build and Test Customer Service') {
            steps {
                dir('Customer-Service') {
                    // Run Maven build and tests
                    bat 'mvn clean install -DskipTests=false'
                }
            }
        }

        stage('Set Docker Environment for Minikube') {
            steps {
                script {                    
                    // Set environment variable for Docker
                    env.DOCKER_ENV = bat(script: 'minikube docker-env --shell=cmd', returnStdout: true).trim()
                    bat "call ${env.DOCKER_ENV}"
                }
            }
        }

        stage('Build Docker Image in Minikube') {
            steps {
                dir('Customer-Service') {
                    // Build the Docker image inside Minikube
                    bat 'docker build -t customer-service:latest .'
                }
            }
        }

        stage('Deploy to Minikube') {
            steps {
                script {
                    // Set the KUBECONFIG environment variable to the path of your kubeconfig file
                    env.KUBECONFIG = 'C:\\Users\\HP\\.kube\\config' // Adjust this path as needed

                    // Run kubectl commands
                    bat 'kubectl config view'
                    bat 'kubectl config get-contexts'

                    // Apply Kubernetes manifests
                    bat 'kubectl apply -f kubernetes-manifests/customer-service-deployment.yaml'
                    bat 'kubectl apply -f kubernetes-manifests/customer-service-service.yaml'
                }
            }
        }
    }
}
