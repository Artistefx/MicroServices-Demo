pipeline {
    agent any
    tools {
        maven "maven-3.9.7"
    }
    stages {
        stage('Deploy to Minikube') {
            steps {
                // Deploy the application to Minikube
                bat 'kubectl config view'
                bat 'kubectl config get-contexts'
                bat 'kubectl apply -f kubernetes-manifests/customer-service-deployment.yaml'
                bat 'kubectl apply -f kubernetes-manifests/customer-service-service.yaml'
            }
        }
    }
}
